PRIVATE notizen AS NEW main
PRIVATE nummer AS Integer
PRIVATE res AS Integer
PRIVATE kdnr AS Integer
PRIVATE sql_handle AS result
PRIVATE notiz_handle AS result

PUBLIC SUB Form_Open()
    res = akquiseliste.ak_nr
    kdnr = res
    sql_handle = notizen.sql_query("select * from tab_akquise where ak_nr=" & kdnr)
    notiz_handle = notizen.sql_query("select * from tab_ak_notizen where ak_nr=" & kdnr & " order by ak_nr ")
    textbox1.text = sql_handle!ak_name & " " & sql_handle!ak_namenszusatz
    nummer = res
END

PUBLIC SUB Button1_Click()
  DIM sql_insert AS Result
  DIM sql_update AS Result
  DIM test AS Integer
  IF NOT textbox4.text OR NOT textarea1.text THEN
    message("Die Felder d√ºrfen nicht leer sein!")
  ELSE
    sql_insert = notizen.sql_query("insert into tab_ak_notizen (ak_nr,gespr_partner,notiz,datum,time) values (" & nummer & ",\"" & textbox4.text & "\",\"" & textarea1.text & "\",CURRENT_DATE,CURRENT_TIME)")
    sql_update = notizen.sql_query("update tab_akquise set ak_status=\"" & combobox1.text & "\" where ak_nr=" & nummer)
    akquiseliste.Show
    ME.Close
  END IF
END

